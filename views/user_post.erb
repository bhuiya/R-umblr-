<header id="main-header" class="py-2 bg-primary text-white">
 <div class="container">
  <div class="row">
   <div class="col-md-6">
     <h1><i class="fa fa-pencil"></i> User Posts</h1>
   </div>
  </div>
 </div>
</header>

<% @userpost.each do |userpost| %>
 <div class="user_post">
  <div class="card w-75 p-3">
   <div class="card-header">
     <%= userpost.title %>
   </div>
   <div class="card-body">
    <h5 class="card-title"><%= userpost.catagory %></h5>
    <p class="card-text"><%= userpost.description %></p>
    <a href="/user/post/<%= userpost.user_id %>/<%= userpost.id %>" class="btn btn-primary">Edit</a>
   </div>
  </div>
</div>
<% end %>
